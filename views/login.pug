extends layout
block content
      

    section.container
       h1 Login

       if err
            p.error= err

       form(action="/auth/login" method="POST" )
         
            label(for="username") Username
            input(type="email" name="username" required)
            label(for="password") Password
            input(type="password" name="password" required)
            
            input(type="submit" value="login")

